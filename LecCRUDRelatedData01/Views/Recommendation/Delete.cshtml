@using LecCRUDRelatedData01.Models.Entities
@model Recommendation

@{
    var person = (Person?)ViewData["Person"];
    if (person == null) person = new();
    ViewData["Title"] =
       $"Deleting recommendation for {person.FirstName} {person.MiddleName} {person.LastName}";
}

<h1>@ViewData["Title"]</h1>


<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Recommendation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Narrative)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Narrative)
        </dd>
    </dl>

    <form asp-action="Delete">
        @if (Model != null)
        {
            <input asp-for="Id" type="hidden" value="@Model.Id" />
            <input name="personId" value="@person.Id" type="hidden" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        }
        <a asp-action="Details" asp-controller="Person"
           asp-route-id="@person.Id">Back to Person Details</a>
    </form>
</div>

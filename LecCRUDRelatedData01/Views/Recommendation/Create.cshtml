@using LecCRUDRelatedData01.Models.Entities
@model LecCRUDRelatedData01.Models.Entities.Recommendation

@{
    var person = (Person?)ViewData["Person"];
    if (person == null) person = new();
    ViewData["Title"] = $"Creating recommendation for {person.FirstName} {person.LastName}";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input name="personId" value="@person.Id" type="hidden" />
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <select asp-for="Rating" class="form-select">
                @foreach (string rating in Enum.GetNames(typeof(Rating)))
                 {
                    <option value="@rating">@rating</option>
                 }
                </select>
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Narrative" class="control-label"></label>
                <textarea asp-for="Narrative" class="form-control"></textarea>
                <span asp-validation-for="Narrative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Recommendation" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Person">Back to Person List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

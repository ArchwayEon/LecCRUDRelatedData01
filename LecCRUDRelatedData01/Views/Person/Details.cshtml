@model LecCRUDRelatedData01.Models.Entities.Person

<div>
    <h4>Person</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateOfBirth)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateOfBirth)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="Index">Back to List</a>
</div>
<h3>Recommendations</h3>
Number of Recommendations: @Model.Recommendations.Count<br />
<a asp-action="Create" asp-controller="Recommendation" asp-route-id="@Model.Id">
    Make Recommendation
</a>
<table class="table">
    <thead>
        <tr>
            <th>
                Rating
            </th>
            <th>
                Narrative
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Recommendations)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Narrative)
                </td>
                <td>
                    <a asp-action="Edit" asp-controller="Recommendation"
                   asp-route-id="@Model.Id" asp-route-recId="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-controller="Recommendation"
                   asp-route-id="@Model.Id" asp-route-recId="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
